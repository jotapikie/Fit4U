<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".client.SeeWeekTrainingActivity">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="630dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:paddingVertical="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="82dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="59dp"
                    android:layout_marginEnd="0dp"
                    android:fontFamily="@font/cabin_bold"
                    android:text="Your training:"
                    android:textAlignment="center"
                    android:textSize="30dp" />

                <androidx.recyclerview.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/textView7"
                    android:scrollbars="vertical"
                    tools:context=".client.SeeWeekTrainingActivity" />

            </RelativeLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="92dp"
            android:layout_height="86dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="361dp"
            android:layout_marginTop="-32dp"
            android:layout_marginEnd="-43dp"
            android:fontFamily="@font/anton"
            android:text="+"
            android:textColor="#353535"
            android:textSize="60sp" />

    </RelativeLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="659dp"
        android:layout_marginEnd="0dp"
        android:background="#353535"
        app:itemIconTint="#9C9C9C"
        app:itemTextColor="#9C9C9C"
        app:menu="@menu/simple_menu"
        tools:ignore="MissingConstraints" />

</RelativeLayout>