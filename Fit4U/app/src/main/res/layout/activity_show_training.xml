<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".ShowTraining">

    <RelativeLayout
        android:id="@+id/rll"
        android:layout_width="300dp"
        android:layout_height="500dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/box"
        android:paddingVertical="10dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:id="@+id/texto1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="19dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/bebas_neue_regular"
                    android:gravity="center"
                    android:text="your trainining for today"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/texto2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/texto1"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/roboto_condensed"
                    android:gravity="center"
                    android:text="Estimated time: 00:59h"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/texto3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/texto2"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/roboto_condensed"
                    android:gravity="left"
                    android:text="Est calories burned: 500 kCal"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/texto4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/texto3"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/roboto_condensed"
                    android:gravity="center"
                    android:text="Exercises:"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/texto4"
                    android:layout_marginLeft="20dp">

                    <RelativeLayout
                        android:id="@+id/rl1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:paddingBottom="10dp">

                        <TextView
                            android:id="@+id/ex1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="15dp"
                            android:fontFamily="@font/roboto_condensed"
                            android:gravity="center"
                            android:text="ex1Name: 2min"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/img1"
                            android:layout_width="100dp"
                            android:layout_height="60dp"
                            android:layout_marginBottom="10dp"
                            android:layout_toRightOf="@id/ex1"
                            android:src="@drawable/treino" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/rl1"
                        android:paddingBottom="10dp">

                        <TextView
                            android:id="@+id/ex2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="15dp"
                            android:fontFamily="@font/roboto_condensed"
                            android:gravity="center"
                            android:text="ex2Name: 2min"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/img2"
                            android:layout_width="100dp"
                            android:layout_height="60dp"
                            android:layout_marginBottom="10dp"
                            android:layout_toRightOf="@id/ex2"
                            android:src="@drawable/treino" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/rl2"
                        android:paddingBottom="10dp">

                        <TextView
                            android:id="@+id/ex3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="15dp"
                            android:fontFamily="@font/roboto_condensed"
                            android:gravity="center"
                            android:text="ex3Name: 2min"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/img3"
                            android:layout_width="100dp"
                            android:layout_height="60dp"
                            android:layout_marginBottom="10dp"
                            android:layout_toRightOf="@id/ex3"
                            android:src="@drawable/treino" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/rl3"
                        android:paddingBottom="10dp">

                        <TextView
                            android:id="@+id/ex4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="15dp"
                            android:fontFamily="@font/roboto_condensed"
                            android:gravity="center"
                            android:text="ex4Name: 2min"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/img4"
                            android:layout_width="100dp"
                            android:layout_height="60dp"
                            android:layout_marginBottom="10dp"
                            android:layout_toRightOf="@id/ex4"
                            android:src="@drawable/treino" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/rl4"
                        android:paddingBottom="10dp">

                        <TextView
                            android:id="@+id/ex5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="15dp"
                            android:fontFamily="@font/roboto_condensed"
                            android:gravity="center"
                            android:text="ex5Name: 2min"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/img5"
                            android:layout_width="100dp"
                            android:layout_height="60dp"
                            android:layout_marginBottom="10dp"
                            android:layout_toRightOf="@id/ex5"
                            android:src="@drawable/treino" />
                    </RelativeLayout>

                </RelativeLayout>


            </RelativeLayout>
        </ScrollView>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="175dp"
        android:layout_height="100dp"
        android:layout_below="@id/rll"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:paddingVertical="10dp">

        <TextView
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"

            android:background="@drawable/button_style"
            android:fontFamily="@font/bebas_neue"
            android:gravity="center"
            android:text="Start"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="normal" />

    </RelativeLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="659dp"
        android:layout_marginEnd="0dp"
        android:background="#353535"
        app:itemIconTint="#9C9C9C"
        app:itemTextColor="#9C9C9C"
        app:menu="@menu/simple_menu"
        tools:ignore="MissingConstraints" />

</RelativeLayout>